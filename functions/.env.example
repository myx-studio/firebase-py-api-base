# Plek API Environment Variables
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development  # development, testing, production
LOG_LEVEL=DEBUG

# Firebase Configuration
WEB_API_KEY=
PROJECT_ID=
STORAGE_BUCKET=
DATABASE_URL=

# Firebase Admin SDK (path to service account JSON)
GOOGLE_APPLICATION_CREDENTIALS=./serviceAccountKey.json

# Mailgun Configuration
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain
MAILGUN_FROM_EMAIL=noreply@yourdomain.com
MAILGUN_FROM_NAME=Plek App

# Expo Push Notifications
EXPO_TOKEN=your-expo-access-token

# SMTP Configuration (if using SMTP instead of Mailgun)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Security
JWT_SECRET=your-jwt-secret-key
API_KEY=your-api-key

# Storage
MAX_FILE_SIZE_MB=5
ALLOWED_IMAGE_FORMATS=JPEG,PNG,GIF,WEBP

# API Configuration
API_PREFIX=/v1
RATE_LIMIT=100

# CORS
CORS_ORIGINS=*
CORS_ALLOW_HEADERS=Content-Type,Authorization,Content-Length,X-Requested-With,Accept
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
